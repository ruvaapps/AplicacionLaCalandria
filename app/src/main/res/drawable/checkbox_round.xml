<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado chequeado: círculo sólido -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="20dp" android:height="20dp"/>
            <solid android:color="#2962FF"/> <!-- color principal -->
            <stroke android:width="2dp" android:color="#2962FF"/>
        </shape>
    </item>

    <!-- Estado no chequeado: círculo blanco con borde gris -->
    <item>
        <shape android:shape="oval">
            <size android:width="20dp" android:height="20dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#9E9E9E"/>
        </shape>
    </item>

</selector>

