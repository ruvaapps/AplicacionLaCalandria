<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#2E7D32">

    <!-- Contenido principal: usa LinearLayout centrado -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Fila superior (igual que Home para coherencia visual) -->
        <LinearLayout
            android:id="@+id/topButtonsRow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_gravity="top">

            <Button
                android:id="@+id/btnControlCerco"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Control Cerco"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_guardar_bg" />

            <Button
                android:id="@+id/btnCargarContingencia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cargar Contingencia"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_guardar_bg" />
        </LinearLayout>

        <!-- Texto central (igual que Home) -->
        <TextView
            android:id="@+id/tvHello"
            android:text="La Calandria System Control"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Formulario de login (centrado) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp">

            <EditText
                android:id="@+id/etUser"
                android:hint="Usuario"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etPass"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnIngresar"
                android:text="Ingresar"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_guardar_bg"
                android:textColor="#FFFFFF"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

    <!-- Botón Volver invisible en Login (no es necesario) pero mantenido para consistencia visual -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start"
        android:text="←"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:textColor="#000000"
        android:elevation="0dp"
        android:contentDescription="Volver"
        android:visibility="gone" />

</FrameLayout>
